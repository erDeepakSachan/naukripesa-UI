{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    { 
      "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist/app/browser" } 
    }
  ],
  "rewrites": [
    {
      "source": "/app-config.js",
      "destination": "/api/config.js"
    },
    {
      "source": "/(.*)",
      "destination": "/dist/app/browser/index.html"
    }
  ]
}